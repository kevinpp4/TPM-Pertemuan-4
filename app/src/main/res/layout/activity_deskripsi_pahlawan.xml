<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".deskripsi_pahlawan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/deskripsi_iv_hero"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="3"
            android:src="@drawable/ahmad_dahlan"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/deskripsi_tv_name"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="AHMAD DAHLAN"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/deskripsi_tv_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Deskripsi Ahmad Dahlan"
                android:textSize="20sp"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>